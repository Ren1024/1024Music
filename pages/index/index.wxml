<!--pages/index/index.wxml-->
<view class="indexContainer">
  <!-- 轮播图区域 -->
  <swiper class="banners" indicator-dots indicator-color="#fff" indicator-active-color="#c20c0c" circular>
    <swiper-item wx:for="{{banners}}" wx:key="bannerId" wx:for-item="bannerItem">
      <image src="{{bannerItem.pic}}"></image>
    </swiper-item>
  </swiper>

  <!-- 导航区域 -->
  <view class="navContainer">
    <view class="navItem">
      <text class="iconfont icon-tuijian"></text>
      <text>每日推荐</text>
    </view>
    <view class="navItem">
      <text class="iconfont icon-gedan"></text>
      <text>other页面</text>
    </view>
    <view class="navItem">
      <text class="iconfont icon-paihang"></text>
      <text>排行榜</text>
    </view>
    <view class="navItem">
      <text class="iconfont icon-diantai"></text>
      <text>电台</text>
    </view>
    <view class="navItem">
      <text class="iconfont icon-zhibo"></text>
      <text>直播</text>
    </view>
  </view>

  <!-- 推荐歌曲 -->
  <view class="recommendCotainer">
    <!-- 头部区域 -->
    <view class="header">
      <view class="title">推荐歌曲</view>
      <view class="nav">
        <text>为您精心推荐</text>
        <text class="more">查看更多</text>
      </view>
    </view>
    <!-- 内容区域 -->
    <scroll-view class="recommendScroll" enable-flex 	scroll-x>
      <view class="scrollItem" wx:for="{{recommendList}}" wx:key="id">
        <image src="{{item.picUrl}}"></image>
        <text>{{item.name}}</text>
      </view>
    </scroll-view>
  </view>
</view>
