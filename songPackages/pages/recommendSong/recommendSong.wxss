/* pages/recommendSong/recommendSong.wxss */

.header {
  position: relative;
  width: 100%;
  height: 300rpx;
}
.header image {
  width: 100%;
  height: 100%;
}
.date {
  position: absolute;
  top: calc(50% - 50rpx);
  left: calc(50% - 100rpx);
  width: 200rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  color: #fff;
  font-size: 36rpx;
}
.date .day {
  font-size: 44rpx;
}
/* 内容区 */
.recommendSong {
  position: relative;
  top: -20rpx;
  padding: 0 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
}
.recommendSong .title {
  height: 80rpx;
  line-height: 80rpx;
}
.title .check {
  float: right;
}
.listScroll {
  height: calc(100vh - 360rpx);
}
.listItem {
  position: relative;
  display: flex;
  height: 80rpx;
  margin-bottom: 20rpx;
}
.listItem image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 10rpx;
}
.listItem .song {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}
.song text {
  font-size: 26rpx;
  height: 40rpx;
  line-height: 40rpx;
}
.listItem .iconfont {
  position: absolute;
  right: 0;
  width: 80rpx;
  height: 80rpx;
  text-align: right;
  line-height: 80rpx;
}